(in-package :stumpwm)

;;; Allows for live editting using Emacs and Slime
(require :swank)
(swank-loader:init)
(swank:create-server :port 4004
		     :style swank:*communication-style*
		     :dont-close t)

;;; Keybindings
(stumpwm:define-key stumpwm:*root-map* (stumpwm:kbd "C-c") "exec rxvt")
(stumpwm:define-key stumpwm:*root-map* (stumpwm:kbd "c") "exec rxvt")
(stumpwm:define-key stumpwm:*root-map* (stumpwm:kbd "C-d") "exec dmenu_run -b")
(stumpwm:define-key stumpwm:*root-map* (stumpwm:kbd "d") "exec dmenu_run -b")
(stumpwm:define-key stumpwm:*root-map* (stumpwm:kbd "F") "move-focus right")
(stumpwm:define-key stumpwm:*root-map* (stumpwm:kbd "B") "move-focus left")
(stumpwm:define-key stumpwm:*root-map* (stumpwm:kbd "P") "move-focus up")
(stumpwm:define-key stumpwm:*root-map* (stumpwm:kbd "N") "move-focus down")
(stumpwm:define-key stumpwm:*root-map* (stumpwm:kbd "L") "exec slock")

;;; Tor-browser is sim-linked to the start-tor-browser executable in the /home/kevin/tor-browser directory
(stumpwm:define-key stumpwm:*root-map* (stumpwm:kbd "I") "exec tor-browser")

;;; Start-up commands
(stumpwm:run-commands
	"grename main"
	"gnew internet"
	"gnew system"
	"hsplit"
	"exec xosview")